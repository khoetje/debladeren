{% capture nav_logo %}
  <article class="{{ logo_width }} {{ nav_align }}">
    <div class="site-logo header__logo-wrapper relative lh0 {{ logo_align }}">
      {% if section.settings.logo_homepage != blank and template == 'index' %}
        <a class="header__img-logo-home inline-block lh0 mb0 shrink-wrap" href="{{ routes.root_url }}"><img src="{{ section.settings.logo_homepage | img_url: '800x' }}" alt="{{ shop.name }}"></a>
      {% elsif section.settings.logo != blank %}
        <a class="header__img-logo inline-block lh0 mb0 shrink-wrap" href="{{ routes.root_url }}"><img src="{{ section.settings.logo | img_url: '800x' }}" alt="{{ shop.name }}"></a>
      {% else %}
        <a class="header__text-logo inline-block v-center m0" href="{{ routes.root_url }}">{{ shop.name }}</a>
      {% endif %}
    </div>
  </article>
{% endcapture %}

{% capture nav_full %}
  <article class="span-12 {{ nav_align }}">
    <div class="navigation" role="navigation">
      {% render 'header-drop-navigation' %}
    </div>
  </article>
{% endcapture %}

{% capture cart_links %}
  <article class="{{ cartlink_width }} v-center a-right">
    <ul class="cart cart-link-topbar-false inline-block mb0">
      {% render 'header-cart-links', classes: "m0 p0", use_icons: use_icons %}
    </ul>
  </article>
{% endcapture %}

